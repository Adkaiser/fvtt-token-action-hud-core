
<div id="{{id}}" class="{{style}}" style="top: {{top}}; left: {{left}}; {{~#if background~}}background: {{background}};{{~/if~}} transform: scale({{scale}}); transform-origin: top left">
    {{~#if hud.actorId~}}
    <div id="tah-collapse-expand">
        <button id="tah-collapse-hud" title="{{localize "tokenActionHud.collapseHud"}}">
            <i class="fas fa-caret-left"></i>
        </button>
        <button id="tah-expand-hud" class="tah-hidden" title="{{localize "tokenActionHud.expandHud"}}">
            <i class="fas fa-caret-right"></i>
        </button>
    </div>
    <div id="tah-top-groups">
      {{~#if hud.title~}}
      <div id="tah-character-name">{{hud.title}}</div>
      {{~/if~}}
      {{#each hud.groups}}
      {{>"modules/token-action-hud-core/templates/category.hbs" background=../background}}
      {{/each}}
    </div>
    {{#unless hovering}}
    <div id="tah-buttons" title="{{localize "tokenActionHud.unlockHud"}}">
      <button id="tah-unlock">
        <i class="fa fa-lock"></i>
      </button>
      <button id="tah-lock" class="tah-hidden" title="{{localize "tokenActionHud.lockHud"}}">
        <i class="fa fa-lock-open"></i>
      </button>
      <button id="tah-edit-hud" class="tah-hidden" title="{{localize "tokenActionHud.editHud"}}">
        <i class="fa fa-pen-to-square"></i>
      </button>
    </div>
    {{/unless}}
    {{~/if~}}
</div>
