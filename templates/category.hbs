
<div class="tah-category{{~#if cssClass}} {{cssClass}}{{~/if~}}" {{~#if this.id~}}id="tah-category-{{this.id}}" data-type="custom"{{~/if~}}>
    <button class="tah-category-button" value="{{this.id}}">
        <span class="tah-category-button-content">{{cap this.name}}
            <i class="fa fa-filter" aria-hidden="true"></i>
            {{~#if this.info1~}}<div class="tah-info1">{{this.info1}}</div>{{~/if~}}
            {{~#if this.info2~}}<div class="tah-info2">{{this.info2}}</div>{{~/if~}}
            {{~#if this.info3~}}<div class="tah-info3">{{this.info3}}</div>{{~/if~}}
        </span>
    </button>
    <div class="tah-subcategories-wrapper expand-down">
        <div class="tah-subcategories" {{~#if background~}}style='background: {{background}}'{{~/if~}}>
            {{#each subcategories}}
            {{>"modules/token-action-hud-core/templates/subcategory.hbs" categoryId=../id}}
            {{/each}}
        </div>
    </div>
</div>
